# 通知配置示例
# 复制此文件为 notifications.yaml 并配置您的通知设置

# 邮件通知配置
email:
  enabled: false  # 是否启用邮件通知
  smtp_server: smtp.gmail.com  # SMTP服务器地址
  smtp_port: 587  # SMTP端口（通常587用于TLS，465用于SSL）
  username: your-email@gmail.com  # 发件人邮箱
  password: your-app-password  # 邮箱密码或应用专用密码
  use_ssl: true  # 是否使用SSL加密
  from_name: Code Review System  # 发件人显示名称

# 企业微信群机器人通知配置
wechat_work:
  enabled: false  # 是否启用企业微信通知
  webhook_url: https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-webhook-key  # Webhook URL
  mentioned_list: []  # @用户列表，如: ["@all"] 或 ["user1", "user2"]
  mentioned_mobile_list: []  # @手机号列表，如: ["13800001111", "13800002222"]

# 环境变量覆盖说明：
# 以下环境变量可以覆盖上述配置：
#
# 邮件配置：
# NOTIFICATION_EMAIL_ENABLED=true
# NOTIFICATION_EMAIL_SMTP_SERVER=smtp.gmail.com
# NOTIFICATION_EMAIL_SMTP_PORT=587
# NOTIFICATION_EMAIL_USERNAME=your-email@gmail.com
# NOTIFICATION_EMAIL_PASSWORD=your-password
# NOTIFICATION_EMAIL_USE_SSL=true
# NOTIFICATION_EMAIL_FROM_NAME="Code Review System"
#
# 企业微信配置：
# NOTIFICATION_WECHAT_ENABLED=true
# NOTIFICATION_WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-key
# NOTIFICATION_WECHAT_MENTIONED_LIST=user1,user2
# NOTIFICATION_WECHAT_MENTIONED_MOBILE_LIST=13800001111,13800002222
#
# 收件人配置：
# NOTIFICATION_DEFAULT_EMAIL_RECIPIENTS=admin@company.com,dev@company.com
# NOTIFICATION_ADMIN_EMAIL=admin@company.com