# 服务器配置
HOST=0.0.0.0
PORT=5001

# LLM配置
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# 任务队列配置（使用MockCelery模式）
# 无需配置Redis相关参数

# 静态模式配置
USE_STATIC_MODE=false

# 日志配置
LOG_LEVEL=INFO

# 通知配置
# 邮件通知
NOTIFICATION_EMAIL_ENABLED=false
NOTIFICATION_EMAIL_SMTP_SERVER=smtp.gmail.com
NOTIFICATION_EMAIL_SMTP_PORT=587
NOTIFICATION_EMAIL_USERNAME=your-email@gmail.com
NOTIFICATION_EMAIL_PASSWORD=your-app-password
NOTIFICATION_EMAIL_USE_SSL=true
NOTIFICATION_EMAIL_FROM_NAME=Code Review System

# 企业微信通知
NOTIFICATION_WECHAT_ENABLED=false
NOTIFICATION_WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-webhook-key
NOTIFICATION_WECHAT_MENTIONED_LIST=@all
NOTIFICATION_WECHAT_MENTIONED_MOBILE_LIST=

# 通知收件人
NOTIFICATION_DEFAULT_EMAIL_RECIPIENTS=admin@company.com,dev@company.com
NOTIFICATION_ADMIN_EMAIL=admin@company.com
